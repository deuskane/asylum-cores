name : asylum:component:timer:1.0.0
description : Timer

filesets:

  #---------------------------------------
  # Source Files
  #---------------------------------------
  files_hdl:
    files     :
      - src/timer.vhd
    file_type : vhdlSource
      
  #---------------------------------------
  # Testbench Files
  #---------------------------------------
  files_sim:
    files:
      - sim/tb_timer.vhd
    file_type : vhdlSource

targets:

  #---------------------------------------
  # Default Target
  #---------------------------------------
  default: &default
    description     : Default Target
    filesets        :
      - files_hdl
    toplevel        : timer
    default_tool    : ghdl

  sim:
    << : *default
    description     : Simulation of all cases
    filesets_append :
      - files_sim
    toplevel        : tb_timer
    default_tool    : ghdl
    tools :
      ghdl :
        run_options : ["--vcd=dut.vcd"]

parameters :

  SIZE_ADDR     :
    description : Bus Address width
    datatype    : int
    default     : 3
    paramtype   : generic

  SIZE_DATA :
    description : Bus Data width
    datatype    : int
    default     : 8
    paramtype   : generic

  IT_ENABLE :
    description : Allow interruption
    datatype    : bool
    default     : false
    paramtype   : generic

  TICK :
    description : Value of the internal divider
    datatype    : int
    default     : 1000
    paramtype   : generic


name        : asylum:component:GPIO:1.6.1
description : GPIO Module

#=========================================
generate:
#=========================================

  #---------------------------------------
  gen_csr:
  #---------------------------------------
    generator : regtool
    parameters:
      file         : hdl/csr/GPIO.hjson
      name         : GPIO
      copy         : hdl/csr
      logical_name : asylum

#=========================================
filesets:
#=========================================

  #---------------------------------------
  hdl:
  #---------------------------------------
    files        :
      - hdl/gpio_pkg.vhd
      - hdl/GPIO.vhd
      - hdl/GPIO.vhd
      - hdl/pbi_GPIO.vhd
    file_type    : vhdlSource
    logical_name : asylum
    depend       :
      - asylum:utils:generators
      - asylum:utils:pkg
      - asylum:component:pbi_wrapper_target
  #---------------------------------------
  sim:
  #---------------------------------------
    files:
      - hdl/GPIO_v1.vhd : {logical_name : asylum}
      - sim/tb_GPIO_bidir.vhd
    file_type : vhdlSource-2008

#=========================================
targets:
#=========================================

  #---------------------------------------
  default: &default
  #---------------------------------------
    description     : Default Target
    filesets        :
      - hdl
    toplevel        : GPIO
    default_tool    : ghdl
    generate        :
      - gen_csr

  #---------------------------------------
  sim_testcase:
  #---------------------------------------
    << : *default
    description     : Simulation of all cases
    filesets_append :
      - sim
    toplevel        : tb_GPIO_bidir
    default_tool    : ghdl
    tools :
      ghdl :
        run_options : ["--vcd=dut.vcd"]



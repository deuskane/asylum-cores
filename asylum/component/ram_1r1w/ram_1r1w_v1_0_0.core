name : asylum:component:ram_1r1w:1.0.0
description : RAM with 1 read port and 1 write port

filesets:

  #---------------------------------------
  # Source Files
  #---------------------------------------
  files_hdl:
    files:
      - src/ram_1r1w_pkg.vhd
      - src/ram_1r1w.vhd
    file_type : vhdlSource
    depend :
      - asylum:utils:pkg
      
  #---------------------------------------
  # Testbench Files
  #---------------------------------------
  files_sim:
    files:
      - sim/tb_ram_1r1w.vhd
    file_type : vhdlSource

targets:

  #---------------------------------------
  # Default Target
  #---------------------------------------
  default: &default
    description     : Default Target
    filesets        :
      - files_hdl
    toplevel        : ram_1r1w
    default_tool    : ghdl

  sim:
    << : *default
    description     : Simulation of all cases
    filesets_append :
      - files_sim
    toplevel        : tb_ram_1r1w
    default_tool    : ghdl
    tools :
      ghdl :
        run_options : ["--vcd=dut.vcd"]

parameters :

  WIDTH :
    description : Word width
    datatype    : int
    default     : 8
    paramtype   : generic

  DEPTH :
    description : Number of words
    datatype    : int
    default     : 8
    paramtype   : generic


#=========================================
generate:
#=========================================

  #---------------------------------------
  gen_csr:
  #---------------------------------------
    generator : regtool
    parameters:
      file         : hdl/csr/crc.hjson
      name         : crc
      copy         : hdl/csr
      logical_name : asylum

#=========================================
filesets:
#=========================================

  #---------------------------------------
  hdl:
  #---------------------------------------
    files        :
      - hdl/crc_pkg.vhd
      - hdl/crc_core.vhd
      - hdl/sbi_crc.vhd
    file_type    : vhdlSource-2008
    logical_name : asylum
    depend       :
      - asylum:utils:generators
      - asylum:utils:pkg

#=========================================
targets:
#=========================================

  #---------------------------------------
  default: &default
  #---------------------------------------
    description     : Default Target
    filesets        :
      - hdl
    toplevel        : sbi_crc
    default_tool    : ghdl
    generate        :
      - gen_csr



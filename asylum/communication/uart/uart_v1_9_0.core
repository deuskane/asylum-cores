name        : asylum:communication:uart:1.9.0
description : UART TX and RX

#=========================================
generate:
#=========================================

  #---------------------------------------
  gen_csr:
  #---------------------------------------
    generator : regtool
    parameters:
      file         : hdl/csr/UART.hjson
      name         : UART
      copy         : hdl/csr
      #logical_name : asylum

#=========================================
filesets:
#=========================================

  #---------------------------------------
  rtl:
  #---------------------------------------
    files:
      - hdl/uart_baud_rate_gen.vhd
      - hdl/uart_rx_axis.vhd
      - hdl/uart_tx_axis.vhd
      - hdl/pbi_uart.vhd
    file_type : vhdlSource
    depend :
      - asylum:utils:pkg
      - asylum:component:pbi_wrapper_target
      - asylum:system:GIC

#=========================================
targets:
#=========================================

  #---------------------------------------
  default: &default
  #---------------------------------------
    description     : Default Target
    filesets        :
      - rtl
    generate        :
      - gen_csr

